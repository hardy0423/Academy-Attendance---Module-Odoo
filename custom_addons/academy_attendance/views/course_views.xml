<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================= -->
    <!-- VUES DU MODULE ACADEMY.COURSE -->
    <!-- ========================= -->

    <!-- List View (anciennement tree) -->
    <record id="view_academy_course_tree" model="ir.ui.view">
        <field name="name">academy.course.tree</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <list string="Courses">
                <field name="code"/>
                <field name="name"/>
                <field name="teacher_id" widget="many2one"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="student_count" widget="progressbar" options="{'current_value': student_count, 'max_value': 50, 'editable': false}"/>
                <field name="state" widget="badge" decoration-info="state=='confirmed'" decoration-warning="state=='in_progress'" decoration-success="state=='completed'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_academy_course_form" model="ir.ui.view">
        <field name="name">academy.course.form</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary"
                            modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_start" type="object" string="Start" class="btn-primary"
                            modifiers="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_complete" type="object" string="Complete" class="btn-primary"
                            modifiers="{'invisible': [('state', '!=', 'in_progress')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Course Name"/></h1>
                        <h2><field name="code" placeholder="Course Code"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="teacher_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration_hours"/>
                        </group>
                        <group>
                            <field name="student_count" widget="progressbar"/>
                            <field name="color" widget="colorpicker"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                        <page string="Students">
                            <field name="student_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="student_code"/>
                                    <field name="full_name"/>
                                    <field name="attendance_rate" widget="progressbar"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                        </page>
                        <page string="Attendance">
                            <field name="attendance_ids" nolabel="1">
                                <list>
                                    <field name="student_id"/>
                                    <field name="date"/>
                                    <field name="status" widget="badge"/>
                                    <field name="duration"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_academy_course_kanban" model="ir.ui.view">
        <field name="name">academy.course.kanban</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_title"><field name="name"/></div>
                                <div class="o_kanban_record_subtitle"><field name="code"/></div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="teacher_id" widget="many2one_avatar"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="student_count" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


</odoo>
